<div class="container">
    <div class="row">

        <div class="col-md-12">
            <h2>Bienvenue sur l'interfarce administrateur</h2>
        </div>

    </div>
<!-- ************************************** Liste des articles ************************************** -->
    <div class="tableau">
        <table class="table table-striped table-hover">
            <thead>

                <tr>
                    <th style="text-align: center;">Titre</th>
                    <th style="text-align: center;">Image</th>
                    <th style="text-align: center;">Auteur</th>
                    <th style="text-align: center;">Modifier</th>
                    <th style="text-align: center;">Supprimer</th>
                </tr>

            </thead>

            <tbody>
                    <% ListeDesArticles.forEach(function(lacategorie) {%>
                <tr>
                    <td style="text-align: center;"><%=lacategorie.titre%></td>
                    <td class="img thumbnail" style="text-align: center;"><img style="width:150px" src="<%=lacategorie.image%>" alt=""></td>
                    <td style="text-align: center;"><%=lacategorie.nom%></td>
                    <td style="text-align: center;"><a href="liste-des-articles/edit/<%=lacategorie.articleId%>"><button type="button" class="btn btn-primary"><i class="far fa-edit"></i> Modifier</button></a></td>
                    
                    <!-- formulaire de suppression d'article -->
                    <form action="/tableau-de-bord/liste-des-articles/<%=lacategorie.articleId%>?_method=DELETE" method="POST">
                        <td style="text-align: center;"><button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Supprimer</button></td>
                    </form>
                    
                </tr>
                <%});%>
            </tbody>
        </table>

    </div>
</div>