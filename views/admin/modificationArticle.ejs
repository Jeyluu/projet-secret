<%- include('partials-admin/header.ejs') %>

    <div class="container">
        
            <div class="row">
                <div class="col-md-12 ">
                    <h1>Modification de l'article</h1>
                </div>
            </div>
            

            <!-- FORMULAIRE D'AJOUT D'ARTICLE -->

            <form action="/tableau-de-bord/modifier-un-article/<%= reprise.articleId %>?_method=PUT " method="POST"
                enctype="multipart/form-data">
                <!-- TITRE -->
                <div class="row">
                    <div class=" col-md-6 mb-3 mt-3">
                        <label class="form-label">Titre de l'article</label>
                        <input class="form-control" name="titre" value="<%=reprise.titre%>">
                    </div>
                </div>


                <!-- IMAGE -->
                <div class="col-md-9" style="display: flex;">
                    <div class="mb-3 mr-2">
                        <label for="formFile" class="form-label">Télécharger l'image</label>
                        <input class="form-control" type="file" id="formFile" name="image">
                    </div>
                    <div class="apercu-img mb-3">
                        <h4>Image actuelle</h4>
                        <img src="/images/uploads/<%= reprise.image%> " alt="" style="width: 50%;">
                    </div>
                </div>


                <!-- CATEGORIE -->
                <div class="mb-3">

                    <select name="categorieId">
                        <option>Catégorie de l'article</option>
                        <% categories.forEach(function(categorie) {%>
                            <option value="<%=categorie.categorieId%>">
                                <%=categorie.categorie%>
                            </option>
                            <%});%>
                    </select>
                </div>


                <!-- CONTENU -->
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Contenu de l'article</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"
                        name="contenu"><%=reprise.contenu%></textarea>
                </div>


                <!-- AUTEUR -->
                <div class="mb-3">
                    <select name="auteurId">
                        <option>Choisir l'auteur</option>
                        <% auteurs.forEach(function(auteur) {%>
                            <option value="<%=auteur.auteurId%>">
                                <%=auteur.pseudo%>
                            </option>
                            <%});%>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Publier</button>

            </form>
            <a href="/tableau-de-bord"><button class="btn btn-danger mt-2">Annuler sans sauvegarder</button></a>
        
    </div>



    <%- include('partials-admin/footer.ejs') %>