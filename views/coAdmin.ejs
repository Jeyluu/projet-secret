                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="email">
                        <% if(messemail.length> 0) {%>
                            <div class="alert alert-danger mb-2" role="danger">
                                <%= messemail %>
                            </div>
                            <%}%>
                                <label for="exampleInputPassword1" class="form-label">Mot de passe :</label>
                                <input type="password" class="form-control mb-2" id="exampleInputPassword1"
                                    name="motdepasse">
                                <% if(messmdp.length> 0) {%>
                                    <div class="alert alert-danger mb-2" role="danger">
                                        <%= messmdp %>
                                    </div>
                                    <%}%>
                                    <a href=""><button type="submit" class="btn btn-primary ">Connexion</button></a>
                </form>
                <a href="/"><button class="btn btn-danger ml-2">Retour</button></a>
                    </div>
                    
                
            </div>
            
            



        </div>

    </section>
    <%- include('partials/footer') %>